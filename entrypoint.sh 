#!/bin/bash
# entrypoint.sh

# Start SQL Server in the background
/opt/mssql/bin/sqlservr &

# Wait for SQL Server to start
sleep 30s

# Run the SQL scripts
for script in /sql-scripts/*.sql; do
    /opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P AchalParashar@2024 -i ./sql-scripts/init-database.sql
done

# Keep the container running
wait
